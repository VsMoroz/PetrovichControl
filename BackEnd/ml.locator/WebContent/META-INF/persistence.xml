<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	
	<persistence-unit name="ibeaconDB" transaction-type="JTA">
		<jta-data-source>java:jboss/datasources/MySQLDS</jta-data-source>
		<class>ml.locator.model.entity.User</class>
		<class>ml.locator.model.entity.Role</class>
		<properties>
			<property name="jboss.entity.manager.factory.jndi.name"
				value="java:/BeaconPersistenceUnitFactory" />
			<property name="jboss.entity.manager.jndi.name" value="java:/BeaconEntityManager" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="update"/>
			<property name="hibernate.hbm2ddl.import_files" value="security.sql"/>
		</properties>
	</persistence-unit>
</persistence>